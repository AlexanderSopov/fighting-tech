
body 
  margin 0px
  padding 0px


#logo 
  position fixed
  top 20px
  left 20px
  z-index 1

#logo img
  width 100px

div.bg-overlay
  pointer-events none
  background-color rgba(29,30,28, 0.15)
  position absolute
  top 0px
  left 0px
  width 100vw
  height 100%

div.body 
  width 100%
  .page-section
    color #fff
    position relative
    section.content
      position relative
      padding 30px calc( (100vw - 320px) / 2)
      width 320px
      color white
      button
        color white
      input
        color white
    div.next-section
      position relative

#intro-section
  height 568px
  text-align center
  section.content
    top 150px
    button
      padding 20px
      border 1px solid white
      background-color transparent
      cursor pointer
      font-weight bold
      font-size 1.2em
    button:hover
      background-color rgba(255,255,255,0.65)
      cursor pointer
  div.next-section
    position absolute
    height 50px
    top calc(100% - 50px)
    width 100%

#vision-section
  section.content
    padding-top 50px
    padding-bottom 80px
    background-color rgba(255,0,0,0.8)
    color white
    iframe.vision-youtube
      width 100%
      height 180px
    img
      width 100%
  div.next-section
    display block
    width 100%
    height 50px
  
#value-section
  height 1500px
  section.content
    top 50px
    ul
      padding 0px
      li
        list-style-type none
        text-align center
        margin-bottom 80px
        div.prop-img
          margin auto
          width 125px
          height 125px
          overflow hidden
          img
            width 100%
        h1
          margin-top 15px
  div.next-section
    position absolute
    height 50px
    width 100%
    top calc(100% - 50px)

#partners-section 
  section.content
    background-color rgba(11,53,209,0.8)
    text-align center
    color white
    div.partners-logo-container
      div
        margin auto
        width 100%
        div
          margin 10px
          display inline-block
          img
            width 100%
      div.partners-premium
        width calc(100% - 30px)
        div
          width: calc(50% - 20px)
      div.partners-favorite div
        width calc(100% / 3 - 20px)
  div.next-section
    display block
    width 100%
    height 50px
  
#call-to-action-section
  section.content
    form
      fieldset
        display block
        border none
        input
          background-color rgba(0,0,0,0)
          padding 10px
      fieldset.text-input
        padding 10px 0 10px 0
        input
          display block
          width calc(100% - 20px)
  div.next-section
    display block
    width 100%
    height 50px
#about-us-section 
  section.content
    background-color rgba(255,0,0,0.8)
    text-align center
    color white
  div.next-section
    display block
    width 100%
    height 50px
    background-color rgba(11,53,209,0.8)


#footer-section 
  section.content
    background-color rgba(11,53,209,0.8)
    text-align center
    #footer-social-media
      a
        display inline-block
        width 65px
        margin auto
        padding 10px
        img
          width 100%
    #footer-credits
      a
        color white

body div.body-container
  background url("img/bg-0/md.jpg") no-repeat fixed
