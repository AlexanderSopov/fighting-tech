@media only screen and (min-width 667px)
  div.page-section > section.content
    width calc(100% - 100px)
    padding 30px
  #logo 
    left calc(100% - 150px)
    top 30px
  
  #logo img
    width 120px


@media only screen and (min-width 768px) 
  div.page-section > section.content
    padding 50px
    width calc(100% - 150px)
  #logo 
    left calc(100% - 170px)
    top 50px
  #logo img
    width 120px
  
  #intro-section > section.content
    padding-top 200px
    padding-bottom 200px

@media only screen and (min-width 1279px) 
  h1 
    font-size 4em
  
  h2 
    font-size 3em
  
  h3 
    font-size 2em
  
  p 
    font-size 1.6em
  
  #logo 
    left calc(100% - 250px)
    top 100px
  
  #logo img
    width 150px
  

@media only screen and (min-width 1281px)
  #intro-section
    background-image url("../img/bg-0/lg.jpg")

@media only screen and (min-width 1921px) 
  #intro-section
    background-image url("../img/bg-0/xl.jpg")
  h1 
    font-size 7em
  
  h2 
    font-size 5em
  
  p 
    font-size 3em
  
  div.body .page-section > div 
    width calc(100% - 900px)
    overflow visible
    padding 200px
  
  #logo 
    left calc(100% - 500px)
    top 200px
    img
      width 300px

  div.body #about-section
    div.img-presentation 
      width calc(50% - 100px)
    div.img-presentation:nth-child(odd) 
      padding-right 100px
    div.img-presentation:nth-child(even) 
      padding-left 100px


