
body 
  margin 0px
  padding 0px
  background-color white


section.content
  color black

/*
 *	FONTS
 */
h1 
  position relative
  font-size 2em
  font-family 'Quicksand', sans-serif
  margin-bottom 10px

h2 
  position relative
  font-family 'Quicksand', sans-serif
  font-size 1.15em
  margin-bottom 0px
  margin-bottom 30px

h3 
  font-family 'Quicksand', sans-serif
  font-size 1.3em

p 
  position relative
  margin-top 15px
  margin-bottom 10px
  font-family 'Quicksand', sans-serif
  font-weight 300
  font-size 1em

#logo 
  position fixed
  top 20px
  left 20px
  z-index 1

#logo img
  width 100px

div.bg-overlay
  pointer-events none
  background-color rgba(29,30,28, 0.15)
  position absolute
  top 0px
  left 0px
  width 100vw
  height 100%

div.body 
  width 100%
  .page-section
    color #fff
    position relative
    section.content
      position relative
      padding 30px
      width calc(100% - 60px)
    div.next-section
      position relative

#intro-section
  height 568px
  text-align center
  section.content
    top 150px
    button
      padding 20px
      border 1px solid white
      background-color transparent
      cursor pointer
      font-weight bold
      font-size 1.2em
    button:hover
      background-color rgba(255,255,255,0.65)
      cursor pointer
  div.next-section
    position absolute
    height 50px
    top calc(100% - 50px)
    width 100%

#vision-section
  section.content
    padding-top 50px
    padding-bottom 80px
    background-color rgba(255,0,0,0.8)
    color white
    iframe.vision-youtube
      width 100%
      height 180px
    img
      width 100%
  div.next-section
    display block
    width 100%
    height 50px
  
#value-section
  height 1500px
  section.content
    top 50px
    ul
      padding 0px
      li
        list-style-type none
        text-align center
        margin-bottom 80px
        div.prop-img
          margin auto
          width 150px
          height 150px
          overflow hidden
        h1
          margin-top 15px
  div.next-section
    position absolute
    height 50px
    width 100%
    top calc(100% - 50px)
    

#partners-section 
  section.content
    background-color #3b5dda
    text-align center
    color white
    div.partners-logo-container
      div
        margin auto
        width 100%
        div
          margin 10px
          display inline-block
          img
            width 100%
      div.partners-premium
        width calc(100% - 30px)
        div
          width: calc(50% - 20px)
      div.partners-favorite div
        width calc(100% / 3 - 20px)
  div.next-section
    display block
    width 100%
    height 50px
  
#call-to-action-section
  section.content
    form
      fieldset
        display block
        border none
        input
          background-color rgba(0,0,0,0)
          padding 10px
      fieldset.text-input
        padding 10px 0 10px 0
        input
          display block
          width calc(100% - 20px)
  div.next-section
    display block
    width 100%
    height 50px
#about-us-section 
  section.content
    background-color rgba(255,0,0,0.8)
    text-align center
    color white
  div.next-section
    display block
    width 100%
    height 50px
    background-color #3b5dda


#footer-section 
  section.content
    background-color #3b5dda
    text-align center


